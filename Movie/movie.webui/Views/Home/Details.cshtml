@model GenericModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css"
        integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <title>@Model.director.name</title>
    <link href="~/images/icon.png"
        rel="icon"> @*burası sekme resmi*@
    <style>
        body {
            background-image: linear-gradient(to right bottom,
                    /*renk efekti ve bu efek nerden nereye değişsin*/
                    rgba(243, 240, 240, 0.85),
                    rgba(243, 240, 240, 0.95)), url("https://cdn5.vectorstock.com/i/1000x1000/77/84/stage-director-on-set-pop-art-vector-19267784.jpg");
            background-repeat: no-repeat;
            background-position: top;
            background-size: cover;
            background-attachment: fixed;
            /*sabit arkaplann*/
            transition: all 5s ease;
            font-family: Arial, Helvetica, sans-serif;

        }

        h1,
        h3,h5 {
            font-weight: bold;
            font-family: 'Times New Roman', Times, serif;
        }
      

        .images img {
            width: 100%;
            height: 100%;
            max-height: 100%;
            max-width: 100%;
            border-radius: 10px;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        }
    </style>
</head>

<body>
    @await Html.PartialAsync("_navbar")

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <h1 class="mb-2 mt-2" style="text-align:center;border-bottom: 2px solid rgba(36, 7, 11, 0.1);">
                    @Model.director.name</h1>

                <div class="images">
                    <img src="~/images/@Model.director.avatar_2">
                </div>
                <div class="mt-2">
                    <a href="@Model.director.ımdb" style="color:#F5C618;"><i class="fab fa-imdb fa-3x"
                            style="float:center;padding-left:40%"></i></a>
                </div>
            </div>

            <div class="col-md-8 mt-3">
                <br><br>
                <p style="color:gray;">@Model.director.ozet</p>
                <p>
                   @Html.Raw(@Model.director.description)</p>
            </div>
        </div>

    </div>
    <div class="container">
        <h3 style="text-align:center" class="mt-5 mb-3">Popüler Filmler</h3>
        <hr>
        <div class="row">
            @foreach (var item in Model.director.movies)
            {
                <div class="col-md-4 mb-3">
                    <div class="card" style="width: 18rem;border-radius: 10px;box-shadow: rgba(50, 50, 93, 0.25) 0px 30px 60px -12px inset, rgba(0, 0, 0, 0.3) 0px 18px 36px -18px inset;">
                        <img class="card-img-top " src="~/images/@item.img" alt="Card image cap" style="height: 400px;">
                        <div class="card-body">
                            <h5 class="card-title pb-3" style="text-align:center;border-bottom: 2px solid rgba(36, 7, 11, 0.1);">@item.name</h5>
                            <p class="card-text">@item.ozet</p>
                            <a href="/home/movieDetails/@item.id" class="btn btn-info"
                            style="display:block;float: center;">İncele</a>
                        </div>
                    </div> 
                </div>
            }
        </div>
    </div>


    @await Html.PartialAsync("_footer")



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
</body>

</html>