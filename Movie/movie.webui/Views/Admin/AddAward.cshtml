@model awardModel
@{
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="AddAward" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-10">

            <input type="hidden" name="movieId" value="@Model.movieId">


            <div class="form-group row">
                <label asp-for="name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="name" class="form-control" cols="4" rows="4"></input>
                </div>
            </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary" style="float: right;">Kaydet</button>
                </div>
            </div>
        </div>

</form>