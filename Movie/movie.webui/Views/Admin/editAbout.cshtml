@model aboutModel
@{
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="editAbout" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-10">

            <input type="hidden" name="id" value="@Model.id">

            <div class="form-group row">
                <div class="col-md-12">
                    <textarea id="editor" class="form-control" asp-for="about" cols="10" rows="10000"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary" style="float: right;">Kaydet</button>
                </div>
            </div>
        </div>

</form>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>